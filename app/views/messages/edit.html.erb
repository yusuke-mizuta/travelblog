<div class="notice"><%= notice %></div>
<%= render 'layouts/header', header: @header %>

<div class="container">
  <div class="row">
    <div class="main col-xs-8 col-xs-offset-2">
      <div class="alert"><%= alert %></div>
      <div class="heading col-xs-6 col-xs-offset-3">
      	<h3>お知らせの編集</h3>
    	</div>

      <table class="col-xs-8 col-xs-offset-2">
        <%= form_for @message do |f| %>
          <tr>
          	<td style="padding: 5px;"><%= f.label :タイトル %><br>
          	<%= f.text_field :title, class: "col-xs-12"%></td>
          </tr>
          <tr>
          	<td style="padding: 5px;"><%= f.label :本文 %><br>
          	<%= f.text_area :body, class: "col-xs-12"%></td>
          </tr>
          <tr>
            <td style="padding-top: 20px;"><%= f.submit "編集する", class: " btn btn-success col-xs-12"%></td>
          </tr>
      	<% end %>
  	  </table>
  	</div>
  </div>
</div>