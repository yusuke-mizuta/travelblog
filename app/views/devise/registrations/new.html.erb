<%= notice %>
<%= render 'layouts/header', header: @header %>

<div class="container">
　<div class="row">
    <div class="col-md-4 col-xs-offset-1" style="text-align: center;">
      <h4 style="background-color: lightgray;">新規登録</h4>
    </div>
  </div>


    <div class="row" style="margin-top: 30px;">
      <div class="col-xs-8 col-xs-offset-3" style="text-align: center;">
        <table>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <tr>
            <td style="padding: 5px;"><%= f.label :名前 %></td>
            <td style="padding: 5px;"><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
          </tr>
          <tr>
            <td style="padding: 5px;"><%= f.label :メールアドレス %></td>
            <td style="padding: 5px;"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td style="padding: 5px;"><%= f.label :パスワード %></td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "新規登録", class: "btn btn-primary col-xs-12" %></td>
          </tr>
        <% end %>
        </table>
      </div>
    </div>

    <div class="row" style="margin-top: 30px;">
      <div class="col-xs-4 col-xs-offset-1" style="text-align: center;">
        <h4 style="background-color: lightgray;">既に登録済みの方</h4>
        <h5><%= link_to "こちら", new_user_session_path %>　からログインしてください。</h5>
      </div>
    </div>
</div>

<%= render 'layouts/footer', footer: @footer %>



