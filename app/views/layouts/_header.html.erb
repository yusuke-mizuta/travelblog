<header class="navbar navbar-clearfixed-top navbar-inverse"style="background-color: lightblue;">
  <div class="container">
    <div class="row">
      <nav class="nav navbar-nav navbar-left">
        <table>
          <tr>
            <td><span style="color:white; font-size: 30px;">問題</span></td>
            <% if user_signed_in? %>
            <td style="padding: 10px;"><%= form_with(url: search_search_path,method: :get,local: true) do |f| %>
                <%= f.text_field :search %>
                <%= f.select :model , options_for_select({ユーザー: :user,問題: :question })%>
                <%= f.submit '検索' %>
                <% end %></td>
            <% end %>
          </tr>
        </table>
      </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to "ランダム",questions_random_path, class: "glyphicon glyphicon-search" %></li>
          <li><%= link_to "マイページ",user_path(current_user), class: "glyphicon glyphicon-home home" %></li>
          <li><%= link_to "ユーザー",users_path, class: "glyphicon glyphicon-user" %></li>
          <li><%= link_to "問題",questions_path, class: "glyphicon glyphicon-book" %></li>
          <li><%= link_to "ログアウト",destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out logout" %></li>
        <% else %>
          <li><%= link_to "Home",root_path, class: "glyphicon glyphicon-home" %></li>
          <li><%= link_to "sign up",new_user_registration_path, class: "glyphicon glyphicon-edit" %></li>
          <li><%= link_to " login",new_user_session_path, class: "glyphicon glyphicon-log-in" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
  </div>
</header>