<div class="notice"><%= notice %></div>
<%= render 'layouts/header', header: @header %>

<div class="container">
	<div class="row">
		<%= render 'layouts/user_info', user: @user %>
		<div class="col-xs-9">
			<h2>投稿ブログ</h2>
			<table class="table table-hover">
				<thead>
					<th></th>
					<th>撮影場所</th>
					<th>タイトル</th>
				</thead>
				<% @blogs.each do |blog| %>
				<tr>
					<td><%= link_to user_path(@user) do %>
						<%= attachment_image_tag blog.user, :profile_image, :fill,50,50, format: 'jpeg' %><% end %></td>
					<td><%= link_to blog.title,blog_path(blog) %></td>
					<td><%= blog.genre.name %></td>
				</tr>
				<% end %>
        <%#= paginate @blogs %>
			</table>
		</div>
	</div>
</div>


<%= render 'layouts/footer', footer: @footer %>