<div class="notice"><%= notice %></div>
<%= render 'layouts/header', header: @header %>

<div class="container">
	<div class="row">
		<%= render 'layouts/user_info', user: @user %>
		<div class="col-xs-9">
			<h2>ユーザー一覧</h2>
			<table class="table table-hover">
				<thead>
					<th>プロフィール画像</th>
					<th>ユーザー名</th>
					<th></th>
				</thead>
				<% @users.each do |user| %>
				<tr>
					<td><%= link_to user_path(@user) do %>
						<%= attachment_image_tag user, :profile_image, :fill,50,50, format: 'jpeg' %><% end %></td>
					<td><%= user.name %></td>
					<td><%= link_to "詳細",user_path(user), class: "btn btn-success" %></td>
				</tr>
				<% end %>
			</table>
			<%= paginate @users %>
		</div>
	</div>
</div>


<%= render 'layouts/footer', footer: @footer %>