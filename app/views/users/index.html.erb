<div class="notice"><%= notice %></div>
<%= render 'layouts/header', header: @header %>

<div class="container">
	<div class="row">
		<div class="user-info col-xs-3">
			<%= render 'layouts/user_info', user: @user %>
		</div>
		<div class="main col-xs-9">
			<h2>ユーザー一覧</h2>
			<table class="table table-hover">
				<thead>
					<th>プロフィール画像</th>
					<th>ユーザー名</th>
					<th></th>
				</thead>
				<% @users.each do |user| %>
				<tr>
					<td><%= link_to user_path(@user) do %>
						<%= attachment_image_tag user, :profile_image, size:"50x50", format: 'jpeg', fallback: "no_image.jpg" %><% end %></td>
					<td><%= user.name %></td>
					<td><%= link_to "詳細",user_path(user), class: "btn btn-success" %></td>
				</tr>
				<% end %>
			</table>
			<%= paginate @users %>

			<div class="responsive-user-info">
				<%= render 'layouts/user_info', user: @user %>
			</div>

		</div>
	</div>
</div>


<%= render 'layouts/footer', footer: @footer %>