<div class="notice"><%= notice %></div>
<%= render 'layouts/header', header: @header %>
  <div class="container">
    <div class="row">
      <div class="main col-xs-8 col-xs-offset-2">
      <div class="heading col-xs-6 col-xs-offset-3">
      	<h3>問い合わせ一覧</h3>
    	</div>
        <table class="table table-hover">
          <thead>
            <th style="background-color: #EEEEEE;">投稿日</th>
            <th style="background-color: #EEEEEE;">タイトル</th>
            <th style="background-color: #EEEEEE;">対応状況</th>
          </thead>
          <% @requests.each do |request| %>
            <tr>
              <td style="font-size: 20px;"><%= request.created_at.strftime('%Y/%m/%d') %></td>
              <td style="font-size: 20px;"><%= link_to request.title,request_path(request) %></td>
              <td style="font-size: 20px;"><%= request.admin_status %></td>
            </tr>
          <% end %>
        </table>
      <%= paginate @requests %>
      </div>
      </div>
    </div>
  </div>