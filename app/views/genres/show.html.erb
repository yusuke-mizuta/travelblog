<%= render 'layouts/header', header: @header %>

<div class="container" style="margin-top: 50px;">
	<div class="row">
		<div class="col-xs-2" style="text-align: center;">
      <table class="table tables-bordered">
        <thead>
          <th>ジャンル検索</th><%= link_to "edit",edit_genre_path %>
        </thead>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= link_to genre.name,genre_path(genre) %></td>
            </tr>
          <% end %>
      </table>
    </div>

    <div class="col-xs-10">
      <table>
        <tr>
          <td><h1><%= @genre.name %>一覧</h1></td>
          <td><h3>(全<%= @genre.blogs.count %>件)</h3></td>
        </tr>
      </table>
      <div class="product_index-1">
        <% @blogs.each do |blog| %>
          <div class="product_index-2">
            <%= link_to blog.title,blog_path(blog) %><br>
    				<%= blog.body %>
          </div>
        <% end %>
         <%= paginate @blogs %>
      </div>
    </div>
  </div>
</div>

<%= render 'layouts/footer', footer: @footer %>
