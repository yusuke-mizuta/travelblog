<%= render 'layouts/header', header: @header %>

<div class="container" style="margin-top: 50px;">
	<div class="row">

    <div class="main col-xs-9">
      <table>
        <tr>
          <td><h1><%= @genre.name %>一覧</h1></td>
          <td><h3>(全<%= @genre.genre_blogs.count %>件)</h3></td>
        </tr>
      </table>
      <div class="product">
        <% @blogs.each do |blog| %>
          <p><%= link_to blog_path(blog.blog) do %>
          <%= attachment_image_tag blog.blog, :image, format: 'jpeg', fallback: "no_image.jpg", size:"200x200" %>
          <% end %></p>
        <% end %>
      <p><%= paginate @blogs %></p>
      </div>
    </div>

    <div class="sidebar col-xs-3" style="text-align: center;">
      <table class="table tables-bordered">
        <thead>
          <th style="text-align: center;">タグ検索</th>
        </thead>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= link_to genre.name,genre_path(genre) %></td>
            </tr>
          <% end %>
      </table>
      <%= link_to "タグ一覧",genres_path, class: "btn btn-primary col-xs-12" %>
    </div>
  </div>
</div>

<%= render 'layouts/footer', footer: @footer %>
